<% content_for(:title, "Product | To Do") %>
<div class="container">

  <h1><%= @product.name %></h1>
  <center><img src="<%= @product.image %>" /></center>
  <h3>Country of origin: <%= @product.countryoforigin %></h3>
  <h3>Cost: <%= @product.cost %></h3>

  <% if @product.reviews.any? %>
    <h4>Reviews: </h4>

      <% @product.reviews.each do |review| %>
        <p>
          <%= review.author %>
        <% review.rating.times do %>&#9734;<%end%><br>
          <%= review.content_body %><br>
          <%= link_to "Edit", edit_product_review_path(@product, review) %> |
          <%= link_to "Delete", product_review_path(@product, review),
                                    :data => {:confirm => "Are you sure?",
                                                  :method => "delete"} %>
          </p>
      <% end %>

  <% else %>
    <p>There are no reviews yet!</p>
  <% end %>

  <p><%= link_to "Add a review", new_product_review_path(@product) %></p>
  <p><%= link_to "Edit Product", edit_product_url %></p>
  <p><%= link_to "Delete Product", product_path(@product),
                            :data => {:confirm => "You sure?",
                                      :method => "delete"} %></p>

  <p><%= link_to "Return to products", products_path %></p>
</div>
